<?xml version="1.0" encoding="utf-8"?>

<!-- rectangle表示为矩形 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 设置上下左右内边距
         top:上内边距
         bottom:下内边距
         left:左内边距
         right:右内边距
     -->
    <padding
        android:bottom="15dp"
        android:left="15dp"
        android:right="15dp"
        android:top="15dp"
        />

    <!-- 设置圆角矩形
         radius:圆角弧度，核心代码
    -->
    <corners android:radius="40dp" />

    <!-- 设置描边效果
         width:描边宽度
         color:描边颜色
     -->
    <stroke
        android:width="2px"
        android:color="#FBFAFA" />

    <!-- 设置填充效果
         color:填充颜色
     -->
    <solid android:color="#CEE7FA" />

</shape>